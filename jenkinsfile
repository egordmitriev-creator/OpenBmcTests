pipeline {
    agent any
    
    environment {
        QEMU_IMAGE = '/romulus/obmc-phosphor-image-romulus-20250415053117.static.mtd'
    }

    stages {
        stage('Start qemu with OpenBmc') {
            steps {
                script {
                    def qemuProcess = sh(
                        script: "qemu-system-arm \
                        -m 256 \
                        -M romulus-bmc \
                        -nographic \
                        -drive file=${QEMU_IMAGE},format=raw,if=mtd \
                        -net nic \
                        -net user,hostfwd=:0.0.0.0:2222-:22,hostfwd=:0.0.0.0:2443-:443,hostfwd=udp:0.0.0.0:2623-:623"
                        returnStdout: true
                    ).trim()
                    env.QEMU_PID = qemuProcess
                }
            }
        }
        stage('Stop QEMU') {
            steps {
                sh "kill ${env.QEMU_PID} || true"
            }
        }
    }
}